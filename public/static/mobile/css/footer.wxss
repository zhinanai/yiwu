.childrenBody {
  margin-bottom: .9rem;
}
.footer-box {
  position: absolute;
  height: .9rem;
  width: 100%;
}
.footer {
  position: fixed;
  z-index: 1;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  height: .9rem;
  bottom: 0;
  left: 0;
  width: 100%;
  right: 0;
  font-size: .2rem;
  background-color: #fff;
}
.footer a {
  text-align: center;
  width: 50%;
}
.footer a:first-child {
  border-right: 1px solid #ececec;
}
.footer p {
  margin-top: .13rem;
}
.footer a.active {
  color: #705ad4;
}
